    super();
    this.state = { username: "", age: null, errmsg: "" };
  }
  uservalue = (event) => {
    let n = event.target.name;
    let v = event.target.value;
    let err = "";
    if (n === "age") {
      if (v != "" && !Number(v)) {
        err = <strong>invalid,age must be number</strong>;
      }
    }
    this.setState({ errmsg: err });
    this.setState({ [n]: v });
  };
